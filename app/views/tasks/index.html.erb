
    <main class="main">
      <h2>YOUR TASKS</h2>

      <ol class="task-list">
        <%@tasks.each do |task|%>
        <li><%= link_to "#{task.action.upcase}", task_path(task.id)%></li>
        <p><%if task.completion_date == nil %>
          <span><%= link_to "Mark Complete", complete_task_path(task.id), method: :patch, class: "complete" %> |</span>
          <%else%>
          <span>"Do something else" |</span>
          <%end%>
          <span><%= link_to "Edit", edit_task_path(task.id), method: :patch %> | </span>
          <span><%= link_to "Delete", task_path(task.id), method: :delete, data: { confirm: "Are you sure you want to delete this task: #{task.action}?"}%>
          </span></p>
        <%end%>
      </ol>

    </main>
