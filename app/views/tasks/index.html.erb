
<main class="main-area">

  <div class="main-content">

  <h2>YOUR TASKS</h2>

  <ol class="task-list">
    <%@tasks.each do |task|%>


      <%if task.completion_date == nil%>

        <p><li><span><%="#{task.action.capitalize}"%></span><%=" "%><%= link_to "(details)", task_path(task.id), class: "details"%></li></p>
      <span class="incomplete"><%= link_to "Mark Complete", complete_task_path(task.id), method: :patch%></span>

      <%else%>

        <p><li><span id ="completed" %><%="#{task.action.capitalize}"%></span><%=" "%><%= link_to "(details)", task_path(task.id), class: "details"%></li></p>
      <span class="complete"><%= link_to "Unmark Complete", complete_task_path(task.id), method: :patch%></span>
      <%end%>


    <span><%= link_to "| Edit", edit_task_path(task.id) %></span>
    <span><%= link_to "| Delete", task_path(task.id), method: :delete, data: { confirm: "Are you sure you want to delete this task: #{task.action}?"}%></span>

    <%end%>
  </ol>

    </div>

</main>
